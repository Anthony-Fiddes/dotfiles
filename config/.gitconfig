[core]
    pager = delta
    excludesFile = ~/.gitignore
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
    algorithm = histogram
[push]
    autoSetupRemote = true
[pull]
    rebase = true
[rebase]
    autoStash = true
[init]
    defaultBranch = main
